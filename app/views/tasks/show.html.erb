<div class="container d-flex justify-content-between">
  <div class="frist-div">
<h1><%= @task.title %></h1>
<p class="alert alert-secondary"><%= @task.details %></p>
<div class="form-check">
  <% if @task.completed == false %>
    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
    <label class="form-check-label" for="defaultCheck1">
      This task is not completed yet
    </label>
  <% else %>
    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" checked>
    <label class="form-check-label" for="defaultCheck1">
      This task is completed
    </label>
  <% end %>
  <hr>
  <%= link_to "Back to list", tasks_path %>
</div>
</div>
<div class="second-div">
<%= link_to task_edit_path do %>
<button class="btn btn-outline-secondary"><i class="far fa-edit"></i>Edit this task</button>
<% end %>
</div>

